---
import { SITE } from "~/config/siteConfig";
const googleAnalyticsId = SITE?.googleAnalyticsId
---

{googleAnalyticsId && "<!-- Google tag (gtag.js) -->"} 
{googleAnalyticsId && 
<script is:inline src={`https://www.googletagmanager.com/gtag/js?id=G-${googleAnalyticsId}`}>
</script>} 
{googleAnalyticsId &&
 <script is:inline define:vars={{ googleAnalyticsId }}>
   window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', googleAnalyticsId);
</script>
}
{googleAnalyticsId && "<!-- End Google tag (gtag.js) -->"} 
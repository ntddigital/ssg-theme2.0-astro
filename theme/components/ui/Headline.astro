---
import { cn } from "../../utils/cn";

const { title, subtitle, tagline, description, classes = {} } = Astro.props;

const {
  container: containerClass,
  title: titleClass = "text-4xl md:text-6x",
  subtitle: subtitleClass = "text-xl",
  description: descriptionClass = "text-lg",
} = classes;
---

{
  (title || subtitle || tagline || description) && (
    <div
      class={cn(
        "mb-2 md:mx-auto md:mb-4 text-center max-w-3xl",
        containerClass
      )}
    >
      {tagline && (
        <p
          class="text-base text-primary dark:text-white font-bold tracking-wide uppercase"
          set:html={tagline}
        />
      )}
      {title && (
        <h2
          class={cn(
            "font-bold leading-relaxeder  font-heading text-heading text-3xl dark:text-white",
            titleClass
          )}
          set:html={title}
        />
      )}

      {subtitle && (
        <p
          role="heading"
          class={cn("mt-4 text-muted dark:text-white", subtitleClass)}
          set:html={subtitle}
        />
      )}
      {description && (
        <p
          class={cn("mt-4 text-muted dark:text-white", descriptionClass)}
          set:html={description}
        />
      )}
    </div>
  )
}

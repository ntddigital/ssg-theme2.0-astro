---
import PageLayout from "@/layouts/PageLayout.astro";

import Terms from "@/components/common/legal/Terms.astro";

const { content } = Astro.props;
---

<PageLayout metadata={{}} language={content?.language} content={content}>
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
    <h1 class="font-bold font-heading text-4xl md:text-5xl leading-relaxeder">
      {content.title}
    </h1>
    {
      content?.sections?.map(
        (section: { [x: string]: string; type: string }) => {
          if (section?.type === "terms") {
            return <Terms {...content} />;
          }
        }
      )
    }

    <div
      class="mx-auto prose prose-lg max-w-4xl dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:font-heading prose-headings:leading-relaxeder prose-headings: prose-headings:font-bold prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg mt-8"
    >
      <slot />
    </div>
  </section>
</PageLayout>
